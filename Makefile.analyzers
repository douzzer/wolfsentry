	@if pahole --prefix_filter wolfsentry_ "$(BUILD_PARENT)"/wolfsentry-pahole-test-build/src/*.o | grep -E ', holes: [2-9],'; then echo 'found gratuitous hole(s) in struct(s)' 1>&2; false; fi
